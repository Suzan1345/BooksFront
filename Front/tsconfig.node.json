{
  "extends": "@tsconfig/node22/tsconfig.json",
  "include": [
    "vite.config.mts",
    "vitest.config.mts",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*",
    "eslint.config.*"
  ],
  "compilerOptions": {
    "composite": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "types": ["node"],
    "allowImportingTsExtensions": true,

    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./node_modules/.tmp/ts-node-build",
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo"
  }
}
